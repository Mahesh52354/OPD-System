@model OPD_System.Models.login
@{
    ViewBag.Title = "Sign-In";
    Layout = "~/Views/_StartupLayout.cshtml";
}

<div class="sign-in-form">
    <div class="sign-in-form-top">
        <p>Sign In</p>
    </div>
    <div class="signin">
        <form action="~/Account/Signin" method="post">
            <div class="log-input">
                <div class="log-input-left">
                    @Html.EditorFor(model => model.loginid, new { htmlAttributes = new { @class = "user", @placeholder = "Email / Mobile No", @required = true } })
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="log-input">
                <div class="log-input-left">
                    @Html.PasswordFor(model => model.password, new { @class = "lock", @placeholder = "Password", @required = true })
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="signin-rit">
                @Html.ActionLink("Forgot Password ?", "ForgotPassword", "Account")
                <div class="clearfix"> </div>
            </div>
            <input type="submit" value="Login to your account">
        </form>
    </div>
</div>
